include navbar
.container
	section#guestsGrid
			.page-header
				h1 Guests
				p 
					a.btn(href="/guests/new") Add Guest Â»
				table.table.table-bordered.table-striped
					thead
						tr
							th 
							th Name
							th Description
							th Number
					tbody
						each guest in guests
							tr
								td 
									a.btn(href="/guests/#{guest.id}/page") Page
									a.btn(href="/guests/#{guest.id}/edit") Edit
									a.btn(href="/guests/#{guest.id}/delete") Remove
								td= guest.name
								td= guest.description
								td= guest.mobileNumber
	include footer
